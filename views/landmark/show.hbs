<div class="card mx-auto mt-5 show-landmark-card">
  <div class="card-body">
    <h1 class="card-title">{{landmark.title}}</h1>
    <p class="card-text">{{landmark.description}}</p>
    <a href="/application" class="btn btn-primary">Back</a>
    <a href="{{landmark.id}}/edit" class="btn btn-primary">Edit</a>


    <form action="/landmark/{{landmark.id}}?_method=DELETE" method="post" class="d-inline">
      <input type="submit" value="Delete" class="btn btn-danger">
    </form>


  </div>
</div>