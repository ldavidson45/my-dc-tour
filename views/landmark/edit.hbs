<div class="photo-background pt-5">

  <div class="contianer-fluid" style="height: 5rem"></div>


<div class="container landmark-form pt-3">

    <h5 class="mx-0 text-white form-title">Edit Landmark</h5>


  <form action="/landmark/{{landmark.id}}?_method=PUT" method="post">
    <div class="form-group">
      <label class="form-inputs" for="exampleFormControlInput1">Landmark Name</label>
      <input type="text" name="title" class="form-control" id="exampleFormControlInput1" value="{{landmark.title}}">
    </div>

<div class="form-group">
    <label for="exampleFormControlInput1" class="form-inputs">Address</label>
    <input type="text" name="address" class="form-control" id="exampleFormControlInput1"
      value="{{landmark.address.street}}">

</div>
<div class="form-group">
  <label for="exampleFormControlInput1" class="form-inputs">City</label>
  <input type="text" name="city" class="form-control" id="exampleFormControlInput1"
    value="{{landmark.address.city}}">
</div>
<div class="form-group">
  <label for="exampleFormControlInput1" class="form-inputs">State</label>
  <input type="text" name="state" class="form-control" id="exampleFormControlInput1"
    value="{{landmark.address.state}}">
</div>

<div class="form-group">
  <label for="exampleFormControlTextarea1" class="form-inputs">Description</label>
  <textarea class="form-control" name="description" id="exampleFormControlTextarea1"
    rows="10">{{landmark.description}}</textarea>
</div>

<div class="d-flex justify-content-center pb-3">

<button type="submit" class="btn btn-lg btn-primary btn-block" style="width: 200px;">Update Landmark</button>
</div>

</form>
</form>

</div>

</div>