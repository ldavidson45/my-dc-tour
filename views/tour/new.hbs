<div class="pt-5">

<div class="container landmark-form pt-3">
    <h5 class="mx-0 text-white form-title">Edit Landmark</h5>

  <div class="container">

<form action="/tour" method="post">
  <div class="form-group">
    <label class="form-inputs" for="exampleFormControlInput1">Tour Name</label>
    <input type="text" name="title" class="form-control" id="exampleFormControlInput1" placeholder="">
  </div>

    <div class="form-group">
    <label class="form-inputs" for="exampleFormControlTextarea1">Description</label>
    <textarea class="form-control" name="description" id="exampleFormControlTextarea1" rows="3"></textarea>
  </div>

  {{#each landmarks}}
  <div class="form-check">
  <input class="form-check-input" name="landmark" type="checkbox" value="{{id}}" id="defaultCheck1">
  <label class="form-inputs" class="form-check-label" for="defaultCheck1">
    {{title}}
  </label>
</div>
  {{/each}}

<div class="d-flex justify-content-center pb-3">

  <button type="submit" class="btn btn-lg btn-primary btn-block" style="width: 200px;">Create Tour</button>
</div>
  </form>

</div>  
  </div>
  </div>